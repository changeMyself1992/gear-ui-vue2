{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules"
  ],
  "lib": [
    "es2015"
  ]
}